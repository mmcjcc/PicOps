<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.ezjcc.picops.User" table="users">

        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="id" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

       <!-- User First Name -->
        <property name="nameFirst">
            <column name="name_first" length="20" not-null="true" sql-type="varchar" />
        </property>
        <!-- User Last Name -->
        <property name="nameLast">
            <column name="name_last" length="20" not-null="true" sql-type="varchar"/>
        </property>
        <!-- UserName -->
        <property name="userName">
            <column name="username" length="20" not-null="true" sql-type="varchar"/>
        </property>
       <!-- email -->
        <property name="email">
            <column name="email" length="50" not-null="true" sql-type="varchar"/>
        </property>
        <!-- password -->
        <property name="password">
            <column name="password" length="200" not-null="true" sql-type="varchar"/>
        </property>
        <!--question -->
        <property name="question">
            <column name="questionid" not-null="true" sql-type="int2"/>
        </property>
        <!-- answer -->
        <property name="answer">
            <column name="answer" length="200" not-null="true" sql-type="varchar"/>
        </property>
         <property name="validated">
            <column name="validated" not-null="true" sql-type="bool"/>
        </property>
         <property name="registrationdate">
            <column name="registrationdate" not-null="true" sql-type="timestamp"/>
        </property>
                
    </class>

</hibernate-mapping>