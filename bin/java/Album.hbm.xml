<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.ezjcc.picops.Album" table="albums">

        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="id" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

         <property name="ownerID">
            <column name="ownerid" length="32" not-null="true" sql-type="char(32)" />
        </property>
         <property name="icon">
            <column name="icon" length="32" sql-type="char(32)" />
        </property>
        <property name="title">
            <column name="title" not-null="true" sql-type="varchar(200)" />
        </property>
        <property name="albumVisibility">
            <column name="albumvisibility" not-null="true" sql-type="varchar(8)" />
        </property>
         <property name="photographer">
            <column name="photographer" sql-type="varchar(100)" />
        </property>
       <property name="description">
            <column name="description" sql-type="varchar(200)" />
        </property>
         <property name="creationDate">
            <column name="creationdate" sql-type="timestamp"/>
        </property>
                 
    </class>

</hibernate-mapping>