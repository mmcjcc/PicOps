<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.ezjcc.picops.PictureComment" table="comments">

        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="id" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

         <property name="picID">
            <column name="picid" length="32" not-null="true" sql-type="char(32)" />
        </property>
         <property name="comment">
            <column name="comment" sql-type="varchar(1000)" />
        </property>
        <property name="userName">
            <column name="name" sql-type="varchar(50)" />
        </property>
        
         <property name="timestamp">
            <column name="timestamp" sql-type="timestamp"/>
        </property>
                 
    </class>

</hibernate-mapping>